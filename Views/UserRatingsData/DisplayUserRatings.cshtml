@model greatreads.Models.UserRatingsData

@{
    ViewBag.Title = "User ratings";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div style="display:flex; flex-direction:column">
    <h2>Showing user ratings</h2>
    <a asp-area="" asp-action="GoToCreateRating" asp-controller="UserRatingsData" style="margin-bottom:50px; max-width:200px;">
        <button>Rate a book</button>
    </a>

    <table border="1" align="left" style="max-width:800px; text-align:center;">
        <thead>
            <tr>
                <td width="200">Book ID</td>
                <td width="200">User ID</td>
                <td width="200">Rating</td>
                <td width="200"></td>
            </tr>
        </thead>
        <tbody>
            @foreach (var rating in Model.Ratings)
            {
                <tr>
                    <td>@rating.ID_book</td>
                    <td>@rating.ID_user</td>
                    <td>@rating.Rating</td>
                    <td>
                        <form action="DeleteRating" method="post">
                            <input type="text" name="id_book" placeholder="id_book" value="@rating.ID_book" hidden="hidden" />
                            <input type="text" name="id_user" placeholder="id_user" value="@rating.ID_user" hidden="hidden" />
                            <input style="width:100%" type="submit" value="Delete rating" />
                        </form>
                        <form action="GoToCreateRating" method="post">
                            <input type="text" name="id_book" placeholder="id_book" value="@rating.ID_book" hidden="hidden" />
                            <input type="text" name="id_user" placeholder="id_user" value="@rating.ID_user" hidden="hidden" />
                            <input type="text" name="rating" placeholder="rating" value="@rating.Rating" hidden="hidden" />
                            <input style="width:100%" type="submit" value="Edit rating" />
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
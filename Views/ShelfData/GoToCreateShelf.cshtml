@model greatreads.Models.Shelf

@{
    ViewBag.Title = "Create a shelf";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@if (Model == null)
{
    <div>
        <form action="SaveShelf" method="post">
            <label>Shelf ID</label>
            <input type="text" name="id_shelf" placeholder="id_shelf" />
            <br />
            <label>Name</label>
            <input type="text" name="name" placeholder="name" />
            <br />
            <label>User ID</label>
            <input type="text" name="id_user" placeholder="id_user" />
            <br />
            <input type="submit" value="Save shelf" />
        </form>
    </div>
}
else
{
    <div>
        <form action="SaveShelf" method="post">
            <label hidden="hidden">Shelf ID</label>
            <input hidden="hidden" type="text" name="id_shelf" placeholder="id_shelf" value="@Model.ID_shelf" />
            <br />
            <label>Name</label>
            <input type="text" name="name" placeholder="name" value="@Model.Name" />
            <br />
            <input type="submit" value="Save shelf" />
        </form>
    </div>
}


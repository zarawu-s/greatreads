@model int

@{
    ViewBag.Title = "Add book to shelf";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div style="display:flex; flex-direction:column">
    <h2 style="margin-bottom:50px;">Add book to the shelf</h2>
    <form asp-action="GoToAddToShelf" asp-controller="Shelf" method="post">
        <label style="margin-right:10px;">Book ID</label>
        <input type="text" name="id_shelf" placeholder="id_shelf" value="@Model" hidden="hidden" />
        <input type="text" name="id_book" placeholder="id_book" />
        <input type="submit" value="Add book to the shelf" />
    </form>
</div>